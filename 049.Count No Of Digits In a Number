public class OccuranceOfDigitInNumber {
    public static void main(String[] args) {
        int Number = 828282;
        int Digit = 2;

        String String1 = String.valueOf(Number);
        String String2 = String.valueOf(Digit);

        int count = 0;
        for (int i = 0; i < String1.length(); i++) {
            if (String1.charAt(i) == String2.charAt(0)) {
                count++;
            }
        }

        System.out.println(count);
    }
}
