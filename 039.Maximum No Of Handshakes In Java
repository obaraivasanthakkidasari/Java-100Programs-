public class Max_Handshakes {
    // Method to calculate maximum handshakes
    public static int maxHandshake(int n) {
        return (n * (n - 1)) / 2;
    }

    public static void main(String[] args) {
        int n = 21;  // Number of people

        int result = maxHandshake(n);
        System.out.println("Maximum number of handshakes among " + n + " people is: " + result);
    }
}
